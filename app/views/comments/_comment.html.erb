			<div class = "row">

				<div class = "col-md-1">
					<%= gravatar_helper comment.user %>
				</div>

				<div class = "col-md-10">
					<%= comment.content %>
					<br/>
					<br/>
					 <b>Comment By: </b><%= comment.user.first_name %>,  Posted <%= distance_of_time_in_words(comment.created_at, Time.now)%> ago
				</div>
			</div>
              <div>
               
              </div>
            </div>
        </div>
        <br/>
    <br/>
</div>

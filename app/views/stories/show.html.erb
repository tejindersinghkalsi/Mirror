
<div class = "container" id = "detailed_story">
   <%= alerts %> 
    <br/>
    <br/>
    <div class="card" id="story_title_card">
  <div class="card-header" id  = "story_title_section">
    <% if(@story.access) == "PUBLIC" %>
    <b><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-check2" viewBox="0 0 16 16">
  <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>

</svg>STORY TITLE</b>
<% end %>
<% if(@story.access) == "PRIVATE" %>
    <b><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-check2-all" viewBox="0 0 16 16">
  <path d="M12.354 4.354a.5.5 0 0 0-.708-.708L5 10.293 1.854 7.146a.5.5 0 1 0-.708.708l3.5 3.5a.5.5 0 0 0 .708 0l7-7zm-4.208 7-.896-.897.707-.707.543.543 6.646-6.647a.5.5 0 0 1 .708.708l-7 7a.5.5 0 0 1-.708 0z"/>
  <path d="m5.354 7.146.896.897-.707.707-.897-.896a.5.5 0 1 1 .708-.708z"/>
</svg> STORY TITLE</b>
<% end %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      
      <p> <%= @story.title %> </p>
      
    </blockquote>
  </div>
</div>
    
    <br/>
    <br/>
    <div class="card" id="story_title_card">
  <div class="card-header" id  = "story_title_section">
    <b>CONTENT</b> 
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <% if @story.Attachment.present? %>
      <div id = "imgg"><%= image_tag @story.Attachment.url %></div>
      <%end%>
      <br/>
      <% if @story.Img.present? %>
      <div id = "imgg"><%= image_tag @story.Img.url %></div>
      <%end%>
      <p></strong><%= markdown @story.body %></p>
      <% u = @story.user_id%>
      <%  y = User.find(u) %>
      <br/>
      <footer class="blockquote-footer">Written By: <cite title="Source Title"><%= y.name %></cite></footer>
    </blockquote>
  </div>
</div>
    <br/>
    <hr id ="story_hr">
    <p><%= social_share_button_tag(@story.title, :url => "http://mirrorselfdevelopmenttool.com", desc: @story.body)%><p>
    <br/>

    <!-- Start of comment form -->
    <%= render 'comments/comment_form' %>
    <!-- End of comment form -->


    <!-- Start of comments -->
    <div id = "comments" data-story-id="<%= @story.id %>">
      <%= render @story.comments %>
    </div>
    <!-- End of comments -->

    <br/>
    <br/>
    <br/>
    <br/>
    <br/>

    <%= link_to 'BACK', stories_path, class: 'btn btn-outline-primary' %>
    <%= link_to 'HOME', home_path, class: 'btn btn-outline-primary' %>
    

 </div>




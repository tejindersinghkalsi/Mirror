<div class = "container" id ="new_convo">
<h2> New Conversation </h2>
<br/>
<br/>
<%= alerts %> 
<br/>
<%= form_tag conversations_path, method: :post do %>

<div class = "row">

	<div class = "col-md-4">

	<div class = "form-group">
		<%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :name) %>
	</div>
     <br/>
     <br/>
	<div class = "form-group">
		<%= text_field_tag :subject, nil,  placeholder: "Subject", class: "form-control" %>
	</div>
	<br/>
	<br/>
</div>
<div class = "col-md-8">

	<div class = "form-group">
		<%= text_area_tag :body, nil, placeholder: "Body", "cols" => 20, "rows" => 10, class: "form-control" %>
	</div>
</div>
</div>

<br/>
<br>
<hr>
<br/>
<center>
   
	<%= submit_tag("SEND EMAIL", class: "btn btn-success") %>
	<% end %>
</center>
<br/>
<br/>
<br/>
<%= link_to "BACK", conversations_path, class: 'btn btn-outline-primary' %>
<%= link_to "HOME", home_path, class: 'btn btn-outline-primary' %>
</div>
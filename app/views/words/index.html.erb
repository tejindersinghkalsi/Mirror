<%= alerts %>

<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>Wordtitle</th>
      <th>Meaning</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%if @words.present? %>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.wordtitle %></td>
        <td><%= word.meaning %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path %>


<div class="container"id ="target_details">
	<br/>
	<br/>
<table>
	<tr>
<td><p id="link_for_creating_new_target"><%= link_to 'CREATE PERSONAL TARGET', new_target_path, class: 'btn btn-outline-success' %></p></td>
<td><p id="link_for_creating_new_target"><%= link_to 'CREATE GROUP TARGET', groupnew_path, class: 'btn btn-outline-warning' %></p></td>
<td><p id="link_for_creating_new_target"><%= link_to 'MY GROUP TARGETS', groupindex_path, class: 'btn btn-outline-info' %></p></td>
</tr>
</table>
<br/>
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
  PERSONAL STALE TASKS
</button>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel" style="color:red">PERSONAL STALE TASKS:</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if @kk.present? %>
        <% @kk.each do |hm, nm| %>
        <% k = Target.find(hm) %>
      <table class="table table-striped" id = "p_stale_i">
  <thead>
    <tr>
      <th scope="col">TARGET</th>
      <th scope="col">TASK</th>
      <th scope="col">TAKE ACTION</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= k.name %></td>
      <td><%= nm %></td>
      <td><a href="<%= target_path(k) %>">Access Task</a></td>
    </tr>
  </tbody>
</table>
<%end%>
<%else%>
<p>NO DATA TO DISPLAY.</p>
<%end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<br/>
<hr id = "target_type_heading">
<h4>MY PERSONAL TARGETS</h4>
<hr id = "target_type_heading">
<br/>
<%if @personal_targets.present? %>
<% @personal_targets.each do |personal_target| %>
<table class="table table-hover" id ="t_table">
    <tr id="target_index_row" id = "t_table_r">
      <td id="target_h"><h4 style="color:black"><%= personal_target.name %></h4></td>
      <td id="target_options"><%= link_to 'Review/', personal_target %>
          <%= link_to 'Edit/', edit_target_path(personal_target) %>
          <%= link_to 'Delete', personal_target, method: :delete, data: { confirm: 'Are you sure?'} %></td>
          
    </tr>
    <%end%>
    <%end%>
</table>
<br/>
<%if @personal_targets.present? %>
<%= paginate @personal_targets %>
<%end%>
<br/>
<br/>
<br/>
</div>
